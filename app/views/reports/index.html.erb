<div>
  <p>
    <%= link_to "Create Pitcher Report", new_report_path(type: "pitcher"), class: "btn btn-primary btn-sm float-end my-3" %>
    <%= link_to "Create Position Report", new_report_path(type: "position"), class: "btn btn-primary btn-sm float-end mx-3 my-3" %>
  </p>

  <h1 class="my-3">Reports</h1>

  <% if @reports.any? %>
    <div>
      <table id="reports" class="table table-striped table-responsive">
        <thead class="table-dark">
          <tr>
            <th>Type</th>
            <th>Player</th>
            <th>Scout</th>
            <th>Summary</th>
            <th>Created On</th>
            <th colspan="2">Last Modified</th>
          </tr>
        </thead>

        <tbody>
        <% @reports.each do |report| %>
          <tr>
            <td><%= report.reportable_type %></td>
            <td><%= report.player&.name %></td>
            <td><%= report.scout&.name %></td>
            <td><%= truncate(report.summary, length: 20) %></td>
            <td><%= report.created_at.to_date %></td>
            <td><%= report.updated_at.to_date %></td>
            <td>
              <%= link_to 'Show', report_path(report) %>
              <%= link_to 'Edit', edit_report_path(report) %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  <% end %>

</div>
